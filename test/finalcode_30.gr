    δήλωση α, β, γ

    αρχή_προγράμματος
        β := 10;
        γ := 0;

        για α := 0 έως 10 με_βήμα 1 επανάλαβε
            γράψε α
        για_τέλος;

        όσο β >= 0 επανάλαβε
            β := β - 1
        όσο_τέλος;

